#!/bin/sh
#Run as your user, not root
cd

sudo pacman -Sy --noconfirm picom alsa-utils make go dmenu xorg-xsetroot xorg-xinit xorg-server git nitrogen termite redshift arandr

git clone https://aur.archlinux.org/yay.git
cd yay; makepkg PKGBUILD
./src/yay-10.0.1/yay -S brave-bin pacman-mirrorup

#DWM
git clone https://github.com/Rosetho/dwm.git /home/tom/dwm
cd /home/tom/dwm
sudo make clean install
startx 

#Shell Programs (mostly needed for DWM)
mkdir ~/.local/bin
git clone https://github.com/Rosetho/bin.git /home/tom/.local/bin

